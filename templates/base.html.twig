<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="https://www.icom-communication.com/images/logo-icom.svg">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
        {% endblock %}
    </head>
    <body>

        {# NAVBAR #}

        <nav class="navbar navbar-expand-lg navbar-light bg-transparent shadow-sm p-3 mb-5 bg-body rounded">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_home') }}"><img src="{{asset('build/images/logo.png') }}" alt="logoICA" width="150px"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse justify-content-end
                + col" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                    <a class="nav-link" href="{{ path('app_receive') }}">Recevoir l'académie</a>
                    {% if app.user %}
                    <a class="nav-link" href="{{ path('app_member') }}">Espace Parent</a>
                    {% endif %}
                </div>
                </div>
            </div>
        </nav>

        {# BODY #}

        {% block body %}{% endblock %}

        {# FOOTER #}

        <footer class="footer mt-auto py-3">
            <div class="container">
                <div class="row">
                    <div class="col">
                        Site proposé par ICOM Communication © - 2022
                    </div>
                    <div class="col text-end">
                        <a href="#">Administration</a> <a href="#">COVID-19</a> <a href="#">Mentions Légales</a>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
